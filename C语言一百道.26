//26.题目：打印出如下图案（菱形）：
#include<stdio.h>
int main()
{
	int i,j,k;
	for(i=0;i<=3;i++)
	{
		for(j=3;j>i;j--)
		{
			printf(" ");
		}
		for(k=0;k<2*i+1;k++)
		{
			printf("*");
		}
		printf("\n");
	}
	for(i=0;i<=2;i++)
	{
		for(j=0;j<i+1;j++)
		{
			printf(" ");
		}
		for(k=5;k>2*i;k--)
		{
			printf("*");
		}
		printf("\n");
	}
}
